<?xml version="1.0"?>
<project name="schemastoreclient" default="build" basedir=".">
	
	<!-- Builds the SchemaStoreClient jar -->
    <target name="buildSchemaStoreClient">
        <fatjar.build output="SchemaStoreClient.jar">
            <fatjar.manifest/>
            <fatjar.filesource path="build\classes"/>
            <fatjar.filesource path="..\SchemaStore\build\classes">
                <fatjar.exclude relpath="org/mitre/schemastore/data/"/>
                <fatjar.exclude relpath="org/mitre/schemastore/servlet/"/>
            </fatjar.filesource>
            <fatjar.jarsource file="activation-1.1.jar" relpath=""/>
            <fatjar.jarsource file="axis.jar" relpath=""/>
            <fatjar.jarsource file="commons-discovery-0.2.jar" relpath=""/>
            <fatjar.jarsource file="jaxrpc.jar" relpath=""/>
            <fatjar.jarsource file="mail-1.4.jar" relpath=""/>
            <fatjar.jarsource file="saaj.jar" relpath=""/>
            <fatjar.jarsource file="wsdl4j-1.5.1.jar" relpath=""/>
            <fatjar.jarsource file="org.apache.commons.logging_1.0.4.v200706111724.jar" relpath=""/>        
        </fatjar.build>
    </target>
	
	<!-- Builds the SchemaStore jars -->
    <target name="build" depends="buildSchemaStoreClient">
    </target>	
	
	<!-- Cleans up the constructed jar files -->
	<target name="clean">
	    <delete file="SchemaStoreClient.jar"/>
    </target>
	
</project>
