<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <!-- Declares the OpenII application -->
   <extension id="org.mitre.openii.application" point="org.eclipse.core.runtime.applications">
      <application>
         <run class="org.mitre.openii.application.OpenIIApplication"></run>
      </application>
   </extension>

   <!-- Declares the OpenII product -->
   <extension id="org.mitre.openii.product" point="org.eclipse.core.runtime.products">
      <product application="org.mitre.openii.application" name="OpenII">
         <property name="appName" value="OpenII"></property>
      </product>
   </extension>

   <!-- Declares the OpenII perspective -->
   <extension point="org.eclipse.ui.perspectives">
      <perspective class="org.mitre.openii.application.OpenIIPerspective" fixed="false" icon="icons/Harmony.jpg" id="org.mitre.openii.plugin.OpenIIPerspective" name="OpenII"></perspective>
   </extension>
 
   <!-- Declares the OpenII views -->
   <extension id="org.mitre.openii.views" point="org.eclipse.ui.views">
      <category name="OpenII" id="Ygg"></category>
      <view name="Repositories" icon="icons/Repositories.gif" category="OpenII" class="org.mitre.openii.views.repositories.RepositoryView" id="org.mitre.openii.views.repositories.RepositoryView"></view>
      <view name="Ygg" icon="icons/Ygg.gif" category="OpenII" class="org.mitre.openii.views.ygg.YggView" id="org.mitre.openii.views.ygg.YggView"></view>
      <view name="Search" icon="icons/Search.gif" category="OpenII" class="org.mitre.openii.views.SearchView" id="org.mitre.openii.views.SearchView"></view>
      <view name="Unity" icon="icons/Harmony.gif" category="OpenII" class="org.mitre.openii.views.UnityView" id="org.mitre.openii.views.UnityView"></view>
   </extension>

	<!-- Declares the OpenII editors -->
   <extension point="org.eclipse.ui.editors">
      <editor name="Schema View" extensions="schema" icon="icons/Schema.gif" class="org.mitre.openii.editors.SchemaView" id="org.mitre.openii.editors.SchemaView"></editor>
      <editor name="Extension View" extensions="schema" icon="icons/Extensions.gif" class="org.mitre.openii.editors.ExtensionView" id="org.mitre.openii.editors.ExtensionView"></editor>
      <editor name="Harmony" extensions="mapping" icon="icons/Harmony.gif" class="org.mitre.openii.editors.HarmonyView" id="org.mitre.openii.editors.HarmonyView"></editor>
   </extension>

</plugin>
